@model AncientCities.WebAPI.ViewModels.CityViewModel

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row ">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.City.Id != 0 ? "Update" : "Create") Ancient city</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="City.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City.Name" class="form-control border-0 shadow" />
                            <label asp-for="City.Name" class="ms-2"></label>
                            <span asp-validation-for="City.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="City.PartOf" class="form-control border-0 shadow" />
                            <label asp-for="City.PartOf" class="ms-2"></label>
                            <span asp-validation-for="City.PartOf" class="text-danger"></span>
                        </div>

                        <div class="py-2 row">
                            <div class="col-9 form-floating">
                                <input id="created-date" asp-for="City.Created" class="form-control border-0 shadow" type="date" asp-format="{0:yyyy-MM-dd}" />
                                <label asp-for="City.Created" class="ms-2"></label>
                                <span asp-validation-for="City.Created" class="text-danger"></span>
                            </div>
                            <div class="col-3 form-floating">
                                <select asp-for="EraCreatedInt" class="form-control border-0 shadow" asp-items="ViewBag.EraNames"></select>
                                <label asp-for="EraCreatedInt" class="ms-2"></label>
                            </div>
                        </div>

                        <div class="py-2 row">
                            <div class="col-9 form-floating">
                                <input id="defunct-date" asp-for="City.Defunct" class="form-control border-0 shadow" type="date" asp-format="{0:yyyy-MM-dd}" />
                                <label asp-for="City.Defunct" class="ms-2"></label>
                                <span asp-validation-for="City.Defunct" class="text-danger"></span>
                            </div>
                            <div class="col-3 form-floating">
                                <select asp-for="EraDefunctInt" class="form-control border-0 shadow" asp-items="ViewBag.EraNames"></select>
                                <label asp-for="EraDefunctInt" class="ms-2"></label>
                            </div>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="City.Population" class="form-control border-0 shadow" type="number" />
                            <label asp-for="City.Population" class="ms-2"></label>
                            <span asp-validation-for="City.Population" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="City.TypeId" asp-items="@Model.CityTypes" class="form-select border-0 shadow">
                                <option disabled selected>--Select Type--</option>
                            </select>
                            <label asp-for="City.TypeId" class="ms-2"></label>
                            <span asp-validation-for="City.TypeId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="files" class="form-control border-0 shadow" multiple />
                            <label asp-for="City.CityImages" class="ms-2"></label>
                        </div>

                        <div class="row p-2">
                            <div class="col-6 col-md-3">
                                @if (Model.City.Id != 0)

                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>

                                }

                                else

                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="City" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    @if (Model.City.CityImages != null)

                    {

                        foreach (var item in Model.City.CityImages)

                        {
                            <div class="border p-1 m-2 text-center">
                                <img src="@item.ImageUrl" width="100%" style="border-radius:5px; border:1px solid" />
                                <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@item.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        }

                    }
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}